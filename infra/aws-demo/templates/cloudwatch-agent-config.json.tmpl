{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "metrics": {
    "append_dimensions": {
      "InstanceId": "${instance_id}",
      "AutoScalingGroupName": "$${aws:AutoScalingGroupName}"
    },
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait",
          "cpu_usage_system",
          "cpu_usage_user"
        ],
        "metrics_collection_interval": 60,
        "totalcpu": true
      },
      "mem": {
        "measurement": [
          "mem_used_percent"
        ],
        "metrics_collection_interval": 60
      },
      "disk": {
        "measurement": [
          "disk_used_percent"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "/"
        ]
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/caddy/apphub-demo.log",
            "log_group_name": "/apphub/demo/stack",
            "log_stream_name": "${instance_id}/caddy",
            "timestamp_format": "auto"
          },
          {
            "file_path": "/var/log/cloud-init-output.log",
            "log_group_name": "/apphub/demo/stack",
            "log_stream_name": "${instance_id}/cloud-init",
            "timestamp_format": "auto"
          }
        ]
      }
    }
  }
}
