{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["dist", "tests"],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/module-sdk" },
    { "path": "../../packages/filestore-client" }
  ]
}
