{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apphub.dev/schemas/job-bundle-manifest.json",
  "title": "JobBundleManifest",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "entry": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "metadata": true
  },
  "required": ["name", "version", "entry"],
  "additionalProperties": true
}
