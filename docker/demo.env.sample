# Persistent data root (adjust if you want volumes outside the repo)
APPHUB_DATA_ROOT=./demo-data

# Public port overrides
APPHUB_CORE_PORT=4000
APPHUB_FRONTEND_PORT=4173
APPHUB_MINIO_PORT=9000
APPHUB_MINIO_CONSOLE_PORT=9001
APPHUB_REDPANDA_PORT=19092
APPHUB_REDPANDA_ADMIN_PORT=19644
APPHUB_FLINK_UI_PORT=8081

# Secrets/tokens (generate new values before sharing externally)
APPHUB_SESSION_SECRET=replace-with-hex-secret
APPHUB_DEMO_ADMIN_TOKEN=demo-admin-token
APPHUB_DEMO_SERVICE_TOKEN=demo-service-token
APPHUB_DEMO_VIEWER_TOKEN=demo-viewer-token

# Streaming backbone (set enabled=true to start Redpanda with the demo stack)
APPHUB_STREAMING_ENABLED=false
APPHUB_STREAM_BROKER_URL=redpanda:9092
APPHUB_FLINK_REST_URL=http://flink-jobmanager:8081
APPHUB_STREAM_MIRROR_WORKFLOW_RUNS=false
APPHUB_STREAM_MIRROR_WORKFLOW_EVENTS=false
APPHUB_STREAM_MIRROR_JOB_RUNS=false
APPHUB_STREAM_MIRROR_INGESTION=false
APPHUB_STREAM_MIRROR_CORE_EVENTS=false
APPHUB_STREAM_TOPIC_WORKFLOW_RUNS=apphub.workflows.runs
APPHUB_STREAM_TOPIC_WORKFLOW_EVENTS=apphub.workflows.events
APPHUB_STREAM_TOPIC_JOB_RUNS=apphub.jobs.runs
APPHUB_STREAM_TOPIC_INGESTION=apphub.ingestion.telemetry
APPHUB_STREAM_TOPIC_CORE_EVENTS=apphub.core.events

# Optional override for the frontend API target (useful on remote hosts)
# APPHUB_FRONTEND_API_BASE_URL=http://demo.example.com:4000
