{
  "name": "@apphub/ticketing-service",
  "version": "0.1.0",
  "private": true,
  "description": "Ticketing MCP backend providing REST APIs and realtime updates",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:mcp\" \"npm run dev:ui\"",
    "build": "npm run build:ui && tsc -b",
    "lint": "tsc -b --pretty false",
    "start": "node dist/server.js",
    "test": "tsx --test tests/**/*.test.ts",
    "mcp": "node dist/mcp/server.js",
    "dev:mcp": "tsx watch src/mcp/server.ts",
    "postinstall": "npm install --prefix ui",
    "build:ui": "npm run build --prefix ui",
    "dev:ui": "npm run dev --prefix ui",
    "test:ui": "npm run test --prefix ui",
    "dev:server": "tsx watch src/server.ts"
  },
  "dependencies": {
    "@apphub/ticketing": "0.1.0",
    "@fastify/cors": "^11.1.0",
    "chokidar": "^3.6.0",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.4.0",
    "prom-client": "^15.1.2",
    "zod": "^3.25.76",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@fastify/static": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "concurrently": "^9.2.1"
  }
}
