{
  "name": "@apphub/secrets",
  "version": "0.1.0",
  "description": "Managed secrets broker service",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "node --enable-source-maps --import tsx src/server.ts",
    "start": "node dist/server.js",
    "build": "npm run build:ts",
    "build:ts": "tsc -b",
    "lint": "tsc -b --pretty false",
    "test": "node ../../scripts/bin/tsx-runner.cjs --test-concurrency=1 --require ../../tests/helpers/node-test-force-exit.cjs --test tests"
  },
  "dependencies": {
    "@apphub/event-bus": "0.1.0",
    "@apphub/shared": "0.1.1",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
