{
  "services": [
    {
      "slug": "better-fileexplorer",
      "displayName": "Better File Explorer",
      "kind": "file-system",
      "baseUrl": "http://127.0.0.1:4174",
      "healthEndpoint": "/api/tree",
      "openapiPath": "/openapi.yaml",
      "devCommand": "PORT=4174 node src/server.js",
      "workingDir": "services/external/better-fileexplorer"
    },
    {
      "slug": "ai-connector",
      "displayName": "AI Connector",
      "kind": "ai-connector",
      "baseUrl": "http://127.0.0.1:8300",
      "healthEndpoint": "/healthz",
      "openapiPath": "/openapi.json",
      "devCommand": "bash -lc 'source .venv/bin/activate && uvicorn app.main:app --host 0.0.0.0 --port 8300 --reload'",
      "workingDir": "services/external/ai-connector"
    },
    {
      "slug": "tagging-service",
      "displayName": "Tagging Service",
      "kind": "file-tagging",
      "baseUrl": "http://127.0.0.1:5103",
      "healthEndpoint": "/healthz",
      "openapiPath": "/openapi.json",
      "devCommand": "TS_NODE_TRANSPILE_ONLY=1 PORT=5103 REDIS_URL=redis://host.docker.internal:6379 REDIS_EVENTS_CHANNEL=apphub:events CATALOG_BASE_URL=http://127.0.0.1:4000 CATALOG_TOKEN=dev-token FILE_EXPLORER_BASE_URL=http://127.0.0.1:4174 AI_CONNECTOR_BASE_URL=http://127.0.0.1:8300 AI_CONNECTOR_MODEL=gpt-4o-mini WORKSPACE_ROOT=./workspace DATABASE_PATH=./data/tagging-service.sqlite npm run start:dev",
      "workingDir": "services/external/tagging-service"
    },
    {
      "slug": "file-drop-watcher",
      "displayName": "File Drop Watcher",
      "kind": "workflow-automation",
      "baseUrl": "http://127.0.0.1:4310",
      "healthEndpoint": "/healthz",
      "devCommand": "FILE_WATCH_ROOT=../../catalog/data/examples/file-drop/inbox FILE_ARCHIVE_DIR=../../catalog/data/examples/file-drop/archive CATALOG_API_BASE_URL=http://127.0.0.1:4000 CATALOG_API_TOKEN=dev-ops-token PORT=4310 npm run dev",
      "workingDir": "services/examples/file-drop-watcher"
    }
  ]
}
