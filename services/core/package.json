{
  "name": "@apphub/core",
  "version": "0.1.0",
  "description": "Metadata and search API for containerized web applications",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node --enable-source-maps --import tsx src/server.ts",
    "lint": "tsc -b --pretty false",
    "build": "npm run build:ts && npm run build:assets && npm run build:openapi",
    "build:ts": "tsc --build --clean && tsc -b",
    "build:assets": "node scripts/copyPythonHarness.js",
    "build:openapi": "node --enable-source-maps --import tsx scripts/generateOpenApi.ts",
    "start": "node dist/server.js",
    "ingest": "node --enable-source-maps --import tsx src/ingestionWorker.ts",
    "builds": "node --enable-source-maps --import tsx src/buildWorker.ts",
    "launches": "node --enable-source-maps --import tsx src/launchWorker.ts",
    "workflows": "node --enable-source-maps --import tsx src/workflowWorker.ts",
    "events": "node --enable-source-maps --import tsx src/eventIngressWorker.ts",
    "event-triggers": "node --enable-source-maps --import tsx src/eventTriggerWorker.ts",
    "event-sampling:worker": "node --enable-source-maps --import tsx src/eventSamplingReplayWorker.ts",
    "event-sampling:replay": "node --enable-source-maps --import tsx src/scripts/replayEventSampling.ts",
    "backfill:service-registry": "node --enable-source-maps --import tsx src/scripts/backfillServiceRegistry.ts",
    "module:publish": "node --enable-source-maps --import tsx src/scripts/publishModule.ts",
    "module:admin": "node --enable-source-maps --import tsx src/scripts/moduleAdmin.ts",
    "module:services": "node --enable-source-maps --import tsx src/moduleServices/runner.ts",
    "register:event-schema": "node --enable-source-maps --import tsx src/scripts/registerEventSchema.ts",
    "validate:streaming": "node --enable-source-maps --import tsx src/scripts/validateStreamingReplay.ts",
    "test:e2e": "node --enable-source-maps --import tsx tests/liquidTemplateValidation.test.ts && node --enable-source-maps --import tsx tests/moduleConfigDescriptor.test.ts && APPHUB_EVENTS_MODE=inline node --enable-source-maps --import tsx tests/ingestion.e2e.ts && APPHUB_EVENTS_MODE=inline node --enable-source-maps --import tsx tests/jobs.e2e.ts && APPHUB_EVENTS_MODE=inline node --enable-source-maps --import tsx tests/jobRegistry.e2e.ts && APPHUB_EVENTS_MODE=inline node --enable-source-maps --import tsx tests/workflows.e2e.ts && APPHUB_EVENTS_MODE=inline node --enable-source-maps --import tsx tests/jobSandbox.e2e.ts && APPHUB_EVENTS_MODE=inline node --enable-source-maps --import tsx tests/adminNuke.e2e.ts && APPHUB_EVENTS_MODE=inline node --enable-source-maps --import tsx tests/eventTriggers.e2e.ts && APPHUB_EVENTS_MODE=inline node --enable-source-maps --import tsx tests/dockerImageImport.test.ts",
    "publish:ai-bundle": "node --enable-source-maps --import tsx src/scripts/publishAiBundle.ts",
    "materializer": "node --enable-source-maps --import tsx src/assetMaterializerWorker.ts"
  },
  "keywords": [
    "webapps",
    "core",
    "search"
  ],
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@apphub/shared": "0.1.1",
    "ajv": "^8.17.1",
    "@apphub/module-sdk": "0.1.0",
    "@aws-sdk/client-s3": "^3.896.0",
    "@aws-sdk/s3-request-presigner": "^3.896.0",
    "@dqbd/tiktoken": "^1.0.22",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.2.0",
    "bullmq": "^5.58.8",
    "cron-parser": "^4.9.0",
    "fastify": "^5.6.1",
    "kafkajs": "^2.2.4",
    "ioredis": "^5.8.0",
    "jsonpath-plus": "^10.1.0",
    "liquidjs": "^10.13.0",
    "openapi-types": "^12.1.3",
    "openid-client": "^6.8.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "simple-git": "^3.28.0",
    "tar": "^7.5.1",
    "yaml": "^2.8.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@apphub/kubectl-mock": "0.1.0",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "@types/tar": "^6.1.13",
    "@types/ws": "^8.18.1",
    "embedded-postgres": "^17.6.0-beta.15",
    "ioredis-mock": "^8.9.0",
    "redis-server": "^1.2.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
