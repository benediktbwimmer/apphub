    "test": "node --test --test-concurrency=1 --require ts-node/register tests/**/*.test.ts",
    "reconcile": "tsx src/reconciliation/worker.ts",
    "reconcile:watch": "tsx watch src/reconciliation/worker.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.896.0",
    "@aws-sdk/s3-request-presigner": "^3.896.0",
    "@apphub/shared": "0.1.0",
    "@apphub/event-bus": "0.1.0",
    "@fastify/multipart": "^9.2.1",
    "bullmq": "^5.58.8",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.8.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "embedded-postgres": "^17.6.0-beta.15",
    "s3rver": "^3.7.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
