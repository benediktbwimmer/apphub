{
  "name": "@apphub/filestore",
  "version": "0.1.0",
  "description": "Transactional filesystem metadata service",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "npm run build:ts",
    "build:ts": "tsc -b",
