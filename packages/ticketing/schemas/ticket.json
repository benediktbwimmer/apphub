{
  "$ref": "#/definitions/Ticket",
  "definitions": {
    "Ticket": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 3,
          "maxLength": 120,
          "pattern": "^[a-zA-Z0-9][a-zA-Z0-9._-]*$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": [
            "backlog",
            "in_progress",
            "blocked",
            "review",
            "done",
            "archived"
          ]
        },
        "priority": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ],
          "default": "medium"
        },
        "assignees": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "dependencies": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Ticket/properties/id"
          },
          "default": []
        },
        "dependents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Ticket/properties/id"
          },
          "default": []
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "dueAt": {
          "type": "string",
          "format": "date-time"
        },
        "history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 8
              },
              "actor": {
                "type": "string",
                "minLength": 1
              },
              "action": {
                "type": "string",
                "enum": [
                  "created",
                  "updated",
                  "status.change",
                  "comment",
                  "dependency.change",
                  "assignment",
                  "field.change"
                ]
              },
              "at": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string"
              },
              "payload": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": [
              "id",
              "actor",
              "action",
              "at"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "kind": {
                "type": "string",
                "enum": [
                  "doc",
                  "issue",
                  "pr",
                  "design",
                  "spec",
                  "other"
                ],
                "default": "other"
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": [
              "label",
              "url"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {}
        },
        "fields": {
          "type": "object",
          "additionalProperties": {}
        },
        "revision": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "id",
        "title",
        "description",
        "status",
        "createdAt",
        "updatedAt",
        "revision"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
