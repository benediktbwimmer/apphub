{
  "$ref": "#/definitions/TicketUpdate",
  "definitions": {
    "TicketUpdate": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": [
            "backlog",
            "in_progress",
            "blocked",
            "review",
            "done",
            "archived"
          ]
        },
        "priority": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ],
          "default": "medium"
        },
        "assignees": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 3,
            "maxLength": 120,
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9._-]*$"
          },
          "default": []
        },
        "dueAt": {
          "type": "string",
          "format": "date-time"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "kind": {
                "type": "string",
                "enum": [
                  "doc",
                  "issue",
                  "pr",
                  "design",
                  "spec",
                  "other"
                ],
                "default": "other"
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {}
              }
            },
            "required": [
              "label",
              "url"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {}
        },
        "fields": {
          "type": "object",
          "additionalProperties": {}
        },
        "comment": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
