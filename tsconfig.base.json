{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@apphub/core": [
        "services/core/src"
      ],
      "@apphub/core/*": [
        "services/core/src/*"
      ],
      "@apphub/core-tests": [
        "services/core/tests"
      ],
      "@apphub/core-tests/*": [
        "services/core/tests/*"
      ],
      "@apphub/test-helpers": [
        "tests/helpers/index.ts"
      ],
      "@apphub/test-helpers/*": [
        "tests/helpers/*"
      ],
      "@apphub/frontend": [
        "apps/frontend/src"
      ],
      "@apphub/frontend/*": [
        "apps/frontend/src/*"
      ],
      "@apphub/cli": [
        "apps/cli/src"
      ],
      "@apphub/cli/*": [
        "apps/cli/src/*"
      ],
      "@apphub/shared": [
        "packages/shared/src/index.ts"
      ],
      "@apphub/shared/*": [
        "packages/shared/src/*"
      ],
      "@apphub/module-registry": [
        "packages/module-registry/dist/index.d.ts"
      ],
      "@apphub/module-registry/*": [
        "packages/module-registry/dist/*"
      ],
      "@apphub/observatory-support": [
        "packages/observatory-support/src/index.ts"
      ],
      "@apphub/observatory-support/*": [
        "packages/observatory-support/src/*"
      ],
      "@apphub/event-bus": [
        "packages/event-bus/src/index.ts"
      ],
      "@apphub/event-bus/*": [
        "packages/event-bus/src/*"
      ],
      "@apphub/filestore-client": [
        "packages/filestore-client/src/index.ts"
      ],
      "@apphub/filestore-client/*": [
        "packages/filestore-client/src/*"
      ],
      "@apphub/docker-mock": [
        "packages/docker-mock/src/index.ts"
      ],
      "@apphub/docker-mock/*": [
        "packages/docker-mock/src/*"
      ],
      "@apphub/kubectl-mock": [
        "packages/kubectl-mock/src/index.ts"
      ],
      "@apphub/kubectl-mock/*": [
        "packages/kubectl-mock/src/*"
      ],
      "kafkajs": [
        "types/kafkajs/index"
      ]
    }
  }
}
