{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@observatory/shared-config": ["../../shared/config.ts"],
      "@observatory/shared-events": ["../../shared/events.ts"]
    }
  },
  "include": ["src/**/*.ts", "../../shared/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
