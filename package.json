{
  "name": "apphub",
  "private": true,
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "modules/*"
  ],
  "scripts": {
    "build": "node scripts/build-all.js build",
    "test": "node scripts/build-all.js test",
    "lint": "node scripts/build-all.js lint",
    "build:with-openapi": "node scripts/generate-openapi-clients-safe.mjs && node scripts/build-all.js build",
    "docker-dev": "node scripts/dev-runner-docker.js",
    "local-dev": "node scripts/dev-runner-local.js",
    "dev:minio": "node scripts/dev-minio.mjs",
    "check:module-target-versions": "node -e \"process.exit(0)\"",
    "generate:openapi-clients": "node scripts/generate-openapi-clients.mjs",
    "check:openapi-clients": "node scripts/check-openapi-clients.mjs",
    "check:artifacts": "node scripts/check-artifacts.mjs",
    "dev:redis": "redis-server --save \"\" --appendonly no",
    "dev:api": "PORT=4000 HOST=:: npm run dev --workspace @apphub/core",
    "dev:worker": "npm run ingest --workspace @apphub/core",
    "dev:builds": "npm run builds --workspace @apphub/core",
    "dev:frontend": "npm run dev --workspace @apphub/frontend",
    "dev:launches": "npm run launches --workspace @apphub/core",
    "dev:workflows": "npm run workflows --workspace @apphub/core",
    "dev:services": "node scripts/dev-services.js",
    "dev:materializer": "npm run materializer --workspace @apphub/core",
    "dev:observatory": "node scripts/dev-load-observatory.mjs",
    "dev:secrets": "npm run dev --workspace @apphub/secrets",
    "dev:metastore": "npm run dev --workspace @apphub/metastore",
    "dev:filestore": "npm run dev --workspace @apphub/filestore",
    "dev:filestore:reconcile": "npm run reconcile:watch --workspace @apphub/filestore",
    "dev:timestore": "npm run dev --workspace @apphub/timestore",
    "dev:timestore:lifecycle": "npm run lifecycle --workspace @apphub/timestore",
    "dev:timestore:ingest": "npm run ingest --workspace @apphub/timestore",
    "dev:timestore:partition-build": "npm run partition-build --workspace @apphub/timestore",
    "dev:clear:postgres": "node scripts/dev-maintenance.mjs postgres",
    "dev:clear:redis": "node scripts/dev-maintenance.mjs redis",
    "dev:clear:minio": "node scripts/dev-maintenance.mjs minio",
    "dev:clear:all": "node scripts/dev-maintenance.mjs all",
    "backfill:service-registry": "npm run backfill:service-registry --workspace @apphub/core",
    "module:publish": "npm run module:publish --workspace @apphub/core --",
    "module:services": "npm run module:services --workspace @apphub/core",
    "docker:build:services": "bash scripts/docker-build-services.sh",
    "test:ui": "npm run test:ui --workspace @apphub/frontend",
    "minikube:up": "node scripts/minikube-up.mjs",
    "minikube:redeploy": "node scripts/minikube-redeploy.mjs",
    "minikube:down": "node scripts/minikube-down.mjs",
    "minikube:verify": "node scripts/minikube-verify.mjs",
    "e2e": "node --enable-source-maps --import tsx tests/e2e/observatory.e2e.ts",
    "e2e:timestore": "node --enable-source-maps --import tsx tests/e2e/timestore.e2e.ts",
    "module:admin": "npm run module:admin --workspace @apphub/core --",
    "deploy:website": "node scripts/deploy-website.mjs",
    "deploy:demo": "node scripts/deploy-demo-stack.mjs",
    "deploy:gke-autopilot": "node scripts/gke-autopilot-deploy.mjs"
  },
  "devDependencies": {
    "@rolldown/pluginutils": "^1.0.0-beta.35",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.6",
    "chokidar": "^3.6.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.23.1",
    "kafkajs": "^2.2.4",
    "openapi-typescript-codegen": "^0.29.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "bullmq": "^5.62.2",
    "fastify": "^5.6.1",
    "parquetjs-lite": "^0.8.7",
    "pg": "^8.16.3",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "optionalDependencies": {
    "lightningcss-darwin-arm64": "^1.30.1",
    "lightningcss-darwin-x64": "^1.30.1",
    "lightningcss-linux-arm64-gnu": "^1.30.1",
    "lightningcss-linux-x64-gnu": "^1.30.1"
  }
}
