{
  "name": "apphub",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/dev-runner.js",
    "test": "npm run test:workspaces",
    "test:workspaces": "npm run test --workspaces --if-present",
    "lint": "npm run check:artifacts && npm run lint --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "check:artifacts": "node scripts/check-artifacts.mjs",
    "dev:redis": "redis-server --save \"\" --appendonly no",
    "dev:api": "PORT=4000 HOST=:: npm run dev --workspace @apphub/catalog",
    "dev:worker": "npm run ingest --workspace @apphub/catalog",
    "dev:builds": "npm run builds --workspace @apphub/catalog",
    "dev:frontend": "npm run dev --workspace @apphub/frontend",
    "dev:launches": "npm run launches --workspace @apphub/catalog",
    "dev:workflows": "npm run workflows --workspace @apphub/catalog",
    "dev:services": "node scripts/dev-services.js",
    "dev:materializer": "npm run materializer --workspace @apphub/catalog",
    "dev:examples": "npm run examples --workspace @apphub/catalog",
    "dev:metastore": "npm run dev --workspace @apphub/metastore",
    "dev:filestore": "npm run dev --workspace @apphub/filestore",
    "dev:filestore:reconcile": "npm run reconcile:watch --workspace @apphub/filestore",
    "dev:timestore": "npm run dev --workspace @apphub/timestore",
    "dev:timestore:lifecycle": "npm run lifecycle --workspace @apphub/timestore",
    "dev:timestore:ingest": "npm run ingest --workspace @apphub/timestore",
    "dev:timestore:partition-build": "npm run partition-build --workspace @apphub/timestore",
    "obs:event:config": "tsx examples/environmental-observatory-event-driven/scripts/materializeConfig.ts",
    "obs:event:triggers": "tsx examples/environmental-observatory-event-driven/scripts/setupTriggers.ts",
    "backfill:service-registry": "npm run backfill:service-registry --workspace @apphub/catalog",
    "migrate:example-bundles": "npm run migrate:example-bundles --workspace @apphub/catalog",
    "docker:build:services": "bash scripts/docker-build-services.sh",
    "test:ui": "npm run test:ui --workspace @apphub/frontend",
    "minikube:up": "node scripts/minikube-up.mjs",
    "minikube:down": "node scripts/minikube-down.mjs",
    "minikube:verify": "node scripts/minikube-verify.mjs"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "duckdb": "^1.4.0",
    "parquetjs-lite": "^0.8.7"
  }
}
